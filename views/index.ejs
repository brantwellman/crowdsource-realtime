<!doctype html>
<html>
  <head>
    <title>Crowdsource It</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.2/css/materialize.min.css">
   <link rel="stylesheet" href="/style.css">
  </head>
  <body>

    <div class="header center">
      <h2>Welcome to Crowdsource!</h2>
      <h3>Add Questions to Your Poll</h3>
    </div>

    <div class="row center submissions">
       <form method="POST" class="col s6 offset-s3" name="poll" action="/surveys">
         <div class="row">
           <div class="input-field">
             <input placeholder="Option 1" id="" type="text" name="poll[responses]">
             <label for="submissions"></label>
           </div>
           <div class="input-field">
             <input placeholder="Option 2" id="" type="text" name="poll[responses]">
             <label for="submissions"></label>
           </div>
           <div class="input-field">
             <input placeholder="Option 3" id="" type="text" name="poll[responses]">
             <label for="submissions"></label>
           </div>
           <div class="input-field">
             <input placeholder="Option 4" id="" type="text" name="poll[responses]">
             <label for="submissions"></label>
           </div>
         </div>
         <input type="submit" class="btn">
       </form>
     </div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="/client.js"></script>
  </body>
</html>
